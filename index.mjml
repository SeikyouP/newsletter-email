        </mj-text>

        <!-- Card List Items -->
        <!-- Note: The MJML framework does not have a list-item component, so you will have to style the list items manually -->
        <!-- Note: the '&#8226;' is the unicode for a bullet point sized black circle -->
        <!-- Note: Some email clients does not support unicodes. Use HTML entities instead -->
        <mj-text mj-class="text-light" font-size="12px" line-height="1.75">&#8226; Lorem, ipsum dolor</mj-text>
